<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvNotif"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/ivNotifIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_notifications_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FF8C00" />

        <TextView
            android:id="@+id/tvNotifTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notif Title"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivNotifIcon"
            app:layout_constraintEnd_toStartOf="@+id/tvNotifDate"
            app:layout_constraintStart_toEndOf="@+id/ivNotifIcon"
            app:layout_constraintTop_toTopOf="@+id/ivNotifIcon" />

        <TextView
            android:id="@+id/tvNotifDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Notif Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivNotifIcon" />


        <TextView
            android:id="@+id/tvNotifDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="27-12-2022"
            app:layout_constraintBottom_toBottomOf="@+id/tvNotifTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvNotifTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

